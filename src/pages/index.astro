---
import App from "../components/islands/App";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Transaction Fee Calculator">
    <main class="min-h-screen bg-white text-lg">
        <h1 class="text-xl">
            Need to find out how you'll make after card processing fees? Try the <span
                class="font-bold text-2xl text-blue-500"
                >Transaction Fee Calculator</span
            >
        </h1>
        <p class="text-gray-500">
            This calculator will help you find out how much you'll make after
            card processing fees.
        </p>
        <App client:only />
    </main>
</Layout>
